/* Evaluation */

#Evaluation {
	/* color:red; */
}

#Evaluation .yi {
	display: flex;
	height: 214rpx;
	padding: 36rpx 48rpx;
	box-sizing: border-box;
}

#Evaluation .yi-left {
	width: 275rpx;
	/* background: red; */
	border-right: 1px solid #e6e7e8;
	text-align: center;
}

#Evaluation .yi-right {
	width: 380rpx;
	padding-left: 48rpx;
	box-sizing: border-box;
}

#Evaluation .yi-right .txt1 {
	margin-right: 24rpx;
}

#Evaluation .yi-right .txt2 {
	color: #ffa126;
	font-size: 27rpx;
}

#Evaluation .dier {
	margin-top: 6rpx;
	margin-bottom: 6rpx;
}

#Evaluation .daoda-time {
	font-size: 24rpx;
	color: #93999f;
	margin-left: 10rpx;
}

#Evaluation .yi-right>view image {
	display: inline-block;
	width: 25rpx;
	height: 25rpx;
	margin-right: 5rpx;
}

#Evaluation .yi-left-yi {
	font-size: 48rpx;
	color: #ff9900;
	line-height: 56rpx;
}

#Evaluation .yi-left-er {
	font-size: 24rpx;
	line-height: 24rpx;
	margin-top: 12rpx;
	margin-bottom: 16rpx;
}

#Evaluation .yi-left-san {
	font-size: 20rpx;
	color: #c3c6c9;
}

/* 灰色分界线 */
#Evaluation .grey {
	width: 100%;
	height: 40rpx;
	background: #f3f5f7;
}

/* 评价分类 */
#Evaluation .comment-sort {
	padding: 36rpx;
	display: flex;
	box-sizing: border-box;
	border-bottom: 1px solid #e6e7e8;
}

#Evaluation .comment-sort text {
	display: block;
	width: 120rpx;
	height: 60rpx;
	text-align: center;
	line-height: 60rpx;
	margin-right: 20rpx;
}

#Evaluation .comment-sort .txt1 {
	background: #00a0dc;
	color: white;
}

#Evaluation .comment-sort .txt2 {
	background: #ccecf8;
	color: black;
}

#Evaluation .comment-sort .txt3 {
	background: #e9ebec;
	color: black;
}

/* 勾选内容 */
#Evaluation .sel {
	display: flex;
	padding: 36rpx;
	box-sizing: border-box;
	border-bottom: 1px solid #e6e7e8;
}

#Evaluation .sel .duigou {
	display: block;
	width: 40rpx;
	height: 40rpx;
	border-radius: 50px;
	background: #b7bbbf;
	color: white;
	text-align: center;
	line-height: 40rpx;
	font-size: 25rpx;
}

#Evaluation .sel .txt {
	font-size: 30rpx;
	color: #93999f;
	margin-left: 20rpx;
}

/* 评论 */
#Evaluation .comment>view:nth-of-type(2) {
	margin-left: 24rpx;
}

#Evaluation .comment {
	width: 100%;
	height: 262rpx;
	border-bottom: 1px solid #e6e7e8;
	padding: 36rpx;
	box-sizing: border-box;
	display: flex;
}

/* 头像 */
#Evaluation .touimg {
	width: 56rpx;
	height: 56rpx;
	border-radius: 50px;
}

#Evaluation .comment-yi {
	width: 550rpx;
	display: flex;
	justify-content: space-between;
}

#Evaluation .star image {
	width: 21rpx;
	height: 21rpx;
	border-radius: 50px;
}

#Evaluation .deliveryTime {
	font-size: 20rpx;
	color: rgb(147, 153, 159);
}

#Evaluation .kuanshi {
	display: flex;
}

#Evaluation .text {
	font-size: 24rpx;
}

#Evaluation .kuanshi>view {
	height: 40rpx;
	border: 1px solid rgb(147, 153, 159);
	text-align: center;
	line-height: 40rpx;
	font-size: 22rpx;
	margin-left: 10rpx;
	margin-top: 20rpx;
}
