/* footer.wxss */

#footer {
  width: 100%;
  height: 100rpx;
  position: relative;
}

.f-box{
	display: flex;
	background-color: #141d27;
}

.f-left{
	flex: 1;
	display: flex;
}

.f-left .logo-wrapper{
	position: absolute;
	top: -16rpx;
	left: 24rpx;
	width: 116rpx;
	height: 116rpx;
	border-radius: 50%;
	background-color: #141d27;
}

.f-left .logo-wrapper .logo{
	width: 88rpx;
	height: 88rpx;
	margin: 12rpx auto;
	border-radius: 50%;
	background-color: #2b333b;
	text-align: center;
}

.f-left .logo-wrapper .logo image{
	width: 65rpx;
	height: 65rpx;
	margin-top: 12rpx;
	color: rgba(255,255,255,0.4);
}

.f-left .logo-wrapper .num{
	position: absolute;
	top: 0;
	left: 88rpx;
	display: block;
	box-sizing: border-box;
	border-radius: 30rpx;
	padding: 0 12rpx;
	height: 32rpx;
	background-color: rgb(240,20,20);
	box-shadow: 0 4rpx 8rpx 0 rgba(0,0,0,0.4);
	font-size: 18rpx;
	font-weight: 700;
	color: rgb(255,255,255);
	line-height: 32rpx;
}

.f-left .price{
	font-size: 32rpx;
	color: rgba(255,255,255,0.4);
	font-weight: 700;
	line-height: 100rpx;
	margin-left: 160rpx;
}
.f-left .desc{
	margin: 24rpx;
	border-left: 1rpx solid rgba(255,255,255,0.1);
	padding-left: 24rpx;
	font-size: 24rpx;
	color: rgba(255,255,255,0.4);
	line-height: 52rpx;
}

/* 购物按钮 */
.f-right{
	width: 210rpx;
	height: 100rpx;
	line-height: 100rpx;
	text-align: center;
	padding: 0 16rpx;
	background-color: #2b333b;
}

.f-right .pay{
	font-size: 32rpx;
	color: rgba(255,255,255,0.4);
	font-weight: 700;
}